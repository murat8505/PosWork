<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="right"
    android:orientation="horizontal"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="80"
        android:orientation="vertical"
        android:weightSum="100" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="Set Date Range"
            android:textColor="#434343"
            android:textSize="@dimen/textAppearance_mdpi_11_sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/Dialog_Custome_Date_Tv_FromDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:drawableRight="@android:drawable/ic_menu_day"
                android:gravity="center_vertical"
                android:text="Tap To Set From Date : "
                android:textSize="@dimen/textAppearance_mdpi_08_sp" />

            <TextView
                android:id="@+id/Dialog_Custome_Date_Tv_FromDateString"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/factor_mdpi_04_dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/textAppearance_mdpi_10_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/Dialog_Custome_Date_Tv_ToDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60"
                android:drawableRight="@android:drawable/ic_menu_day"
                android:gravity="center_vertical"
                android:text="Tap To Set To Date : "
                android:textSize="@dimen/textAppearance_mdpi_08_sp" />

            <TextView
                android:id="@+id/Dialog_Custome_Date_Tv_ToDateString"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:clickable="true"
                android:gravity="center"
                android:paddingLeft="@dimen/factor_mdpi_04_dp"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/textAppearance_mdpi_10_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:orientation="horizontal"
            android:weightSum="100" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/Dialog_Custome_Date_BTN_FetchRecord"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:background="@drawable/btn_dejavo_second"
                android:gravity="center"
                android:text="Fetch Orders"
                android:width="0dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:gravity="bottom|right"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/Dialog_Custome_Date_Tv_Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/factor_mdpi_05_dp"
            android:layout_marginRight="@dimen/factor_mdpi_05_dp"
            android:background="@null"
            android:src="@drawable/cancel_dialog" />
    </LinearLayout>

</LinearLayout>