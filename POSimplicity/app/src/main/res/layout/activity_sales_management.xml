<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parentLayoutTopClass"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/keyss_keyregister_sales_bg"
    android:orientation="vertical"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:gravity="bottom"
        android:orientation="vertical"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="99"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="100" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="32"
                android:orientation="vertical"
                android:weightSum="100" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/totalLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/total_bar"
                        android:orientation="vertical"
                        android:weightSum="100" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="100"
                            android:orientation="horizontal"
                            android:weightSum="100" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="3" >
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="72"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="100" >

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="80"
                                    android:gravity="center_vertical" >

                                    <TextView
                                        android:id="@+id/totalCash"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="0.00"
                                        android:textColor="#008000"
                                        android:textSize="@dimen/textAppearance_mdpi_11_sp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="20"
                                    android:gravity="center_vertical" >
                                </LinearLayout>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/subtotalButton"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="@dimen/factor_mdpi_03_dp"
                                android:layout_marginRight="@dimen/factor_mdpi_03_dp"
                                android:layout_marginTop="@dimen/factor_mdpi_03_dp"
                                android:layout_weight="24"
                                android:background="@drawable/subtotal_button_bg"
                                android:clickable="true"
                                android:gravity="center"
                                android:tag="btn_subtotal"
                                android:text="Tender"
                                android:textColor="#8fa30b"
                                android:textSize="@dimen/textAppearance_mdpi_08_sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="49"
                        android:gravity="left|center_vertical" >

                        <TextView
                            android:id="@+id/tranIdtv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/factor_mdpi_02_dp"
                            android:text="@string/transId"
                            android:textColor="#484848"
                            android:textSize="@dimen/textAppearance_mdpi_08_sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="49"
                        android:gravity="left|center_vertical"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/datetimetv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/factor_mdpi_02_dp"
                            android:text="@string/transTime"
                            android:textColor="#484848"
                            android:textSize="@dimen/textAppearance_mdpi_08_sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="2dp"
                    android:layout_weight="6"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="49" >

                        <TextView
                            android:id="@+id/tv_tranId"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/trans"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/textAppearance_mdpi_06_sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="49" >

                        <TextView
                            android:id="@+id/tv_dataTime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/trans"
                            android:gravity="center"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/textAppearance_mdpi_06_sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="4dp"
                    android:layout_weight="78"
                    android:orientation="vertical"
                    android:weightSum="100" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"
                        android:gravity="left|top" >

                        <LinearLayout
                            android:id="@+id/transTop"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/table_top"
                            android:orientation="horizontal"
                            android:weightSum="100" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/factor_mdpi_01_dp"
                                    android:text="Del"
                                    android:textColor="#484848"
                                    android:textSize="@dimen/textAppearance_mdpi_08_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="37" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="@dimen/factor_mdpi_02_dp"
                                    android:text="Items"
                                    android:textColor="#484848"
                                    android:textSize="@dimen/textAppearance_mdpi_08_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="10" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:text="Qty"
                                    android:textColor="#484848"
                                    android:textSize="@dimen/textAppearance_mdpi_08_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="16" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center|right"
                                    android:text="Dis"
                                    android:textColor="#484848"
                                    android:textSize="@dimen/textAppearance_mdpi_08_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25" >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center|right"
                                    android:paddingLeft="@dimen/factor_mdpi_02_dp"
                                    android:text="Price"
                                    android:textColor="#484848"
                                    android:textSize="@dimen/textAppearance_mdpi_08_sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical" >
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="50"
                        android:orientation="horizontal"
                        android:weightSum="42" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="42" >

                            <RelativeLayout
                                android:id="@+id/listLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#3e3e3e" >

                                <ExpandableListView
                                    android:id="@+id/listview1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:background="#f9f8f0"
                                    android:cacheColorHint="#f9f8f0"
                                    android:divider="#fbfaf5"
                                    android:fadingEdge="none"
                                    android:groupIndicator="@null" />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="44"
                        android:gravity="top|left" >

                        <LinearLayout
                            android:id="@+id/subtotallayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/subtotal_cash_bg"
                            android:orientation="horizontal"
                            android:weightSum="100" >

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2" >
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="48"
                                android:orientation="vertical"
                                android:weightSum="100" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="17"
                                    android:gravity="center_vertical" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Subtotal"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="15"
                                    android:gravity="center_vertical" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Tax"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="16"
                                    android:gravity="center_vertical" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Discount"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="16"
                                    android:gravity="top|left" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Total"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="18"
                                    android:gravity="bottom" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cash"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="18"
                                    android:gravity="top|left" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Change"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="48"
                                android:orientation="vertical"
                                android:weightSum="100" >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="17"
                                    android:gravity="right|center_vertical" >

                                    <TextView
                                        android:id="@+id/tv_subtotal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="15"
                                    android:gravity="right|center_vertical" >

                                    <TextView
                                        android:id="@+id/tv_tax"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="16"
                                    android:gravity="right|center_vertical" >

                                    <TextView
                                        android:id="@+id/tv_discount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="16"
                                    android:gravity="right|top" >

                                    <TextView
                                        android:id="@+id/tv_total"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="18"
                                    android:gravity="right|bottom" >

                                    <TextView
                                        android:id="@+id/tv_cashamount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="18"
                                    android:gravity="right|top" >

                                    <TextView
                                        android:id="@+id/tv_change"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#484848"
                                        android:textSize="@dimen/textAppearance_mdpi_09_sp" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2" >
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.3" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="62"
                android:orientation="vertical"
                android:weightSum="100" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="48" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" >

                            <EditText
                                android:id="@+id/barcodeFocus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/search_box"
                                android:hint="@string/enterbarcode"
                                android:imeOptions="actionDone"
                                android:inputType="textNoSuggestions"
                                android:paddingLeft="@dimen/factor_mdpi_05_dp"
                                android:singleLine="true"
                                android:textSize="@dimen/textAppearance_mdpi_08_sp" />

                            <requestFocus />
                        </LinearLayout>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="48" >

                        <AutoCompleteTextView
                            android:id="@+id/searchAutoCompleteTextview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/search_box"
                            android:hint="@string/search_product"
                            android:imeOptions="actionDone"
                            android:paddingLeft="@dimen/factor_mdpi_05_dp"
                            android:singleLine="true"
                            android:textSize="@dimen/textAppearance_mdpi_08_sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        android:gravity="center_vertical|right" >

                        <TextView
                            android:id="@+id/socketIndicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/socket_disconnect" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal" >
                </LinearLayout>

                <ScrollView
                    android:id="@+id/Activity_Home_ScrollView_Container"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="60.4" >

                    <LinearLayout
                        android:id="@+id/itemsGrid"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|top"
                        android:orientation="vertical" >
                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3.3"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/switchScreen"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal" >
                        </RadioGroup>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="2dp"
                    android:layout_weight="20.3"
                    android:gravity="top|center_horizontal" >

                    <com.CustomControls.HorizontalPager
                        android:id="@+id/horizontal_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >
                    </com.CustomControls.HorizontalPager>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".5"
                    android:gravity="top" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>