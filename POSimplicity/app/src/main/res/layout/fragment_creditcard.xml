<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="100" >

    <ListView
        android:id="@+id/Fragment_CCAdmin_ListView_Gateways"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15.8"
        android:background="@color/list_background"
        android:choiceMode="singleChoice"
        android:divider="@color/list_divider"
        android:dividerHeight="@dimen/factor_mdpi_01_dp"
        android:listSelector="@drawable/list_selector" />

    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:background="@android:color/white" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="84"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100" >

            <TextView
                android:id="@+id/txtLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/icon_6"
                android:drawablePadding="@dimen/textAppearance_mdpi_06_sp"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/credit_card_settings"
                android:textColor="@android:color/white"
                android:textSize="@dimen/textAppearance_mdpi_13_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/Fragment_CCAdmin_TextView_Gateways_Name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textAppearance_mdpi_10_sp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/child_frame_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="68" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="12"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="100" >

            <Button
                android:id="@+id/RESET_CC_ADMIN"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/factor_mdpi_02_dp"
                android:layout_weight="20"
                android:background="@drawable/counter_bg"
                android:gravity="center"
                android:text="Reset"
                android:textSize="@dimen/textAppearance_mdpi_12_sp" />

            <Button
                android:id="@+id/SaveCCADMIN"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/factor_mdpi_02_dp"
                android:layout_weight="20"
                android:background="@drawable/counter_bg"
                android:gravity="center"
                android:text="Save"
                android:textSize="@dimen/textAppearance_mdpi_12_sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>