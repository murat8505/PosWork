<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/factor_mdpi_20_dp"
    android:orientation="horizontal"
    android:weightSum="100" >

    <TextView
        android:id="@+id/Activity_Security_TextView_PassWord_RoleName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center_vertical"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textAppearance_mdpi_10_sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Activity_Security_EditText_PassWord_RoleName"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center"
        android:hint="Enter Password Here"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textAppearance_mdpi_10_sp"
        android:textStyle="bold" />

</LinearLayout>