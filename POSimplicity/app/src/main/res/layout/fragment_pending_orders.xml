<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72726e" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="70"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="100" >

            <Button
                android:id="@+id/Fragment_Pending_Order_Btn_Save"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/factor_mdpi_02_dp"
                android:layout_weight="11"
                android:background="@drawable/counter_bg"
                android:text="Save Order"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textAppearance_mdpi_11_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/Fragment_Pending_Order_Btn_Save_And_Print_Customer_Receipt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/factor_mdpi_02_dp"
                android:layout_weight="11"
                android:background="@drawable/counter_bg"
                android:text="Save and Print Customer Receipt"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textAppearance_mdpi_11_sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <Button
                android:id="@+id/Fragment_Pending_Order_Btn_Save_And_Print_Kitchen_Receipt"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="@dimen/factor_mdpi_02_dp"
                android:layout_weight="11"
                android:background="@drawable/counter_bg"
                android:text="Save and Print to Kitchen"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textAppearance_mdpi_11_sp"
                android:textStyle="bold"
                android:visibility="invisible" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="29"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="100" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <EditText
                        android:id="@+id/Fragment_Pending_Order_Edt_TableId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/factor_mdpi_02_dp"
                        android:layout_weight="35"
                        android:gravity="center"
                        android:hint="Enter Table ID"
                        android:inputType="phone"
                        android:padding="@dimen/factor_mdpi_02_dp"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textAppearance_mdpi_08_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Fragment_Pending_Order_TV_TableId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="@dimen/textAppearance_mdpi_08_sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/Fragment_Pending_Order_Btn_Table_Assign"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/factor_mdpi_02_dp"
                        android:layout_weight="30"
                        android:background="@drawable/counter_bg"
                        android:gravity="center"
                        android:text="Assign\nTable"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textAppearance_mdpi_08_sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="50"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100" >

                    <EditText
                        android:id="@+id/Fragment_Pending_Order_Edt_ClerkId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/factor_mdpi_02_dp"
                        android:layout_weight="35"
                        android:gravity="center"
                        android:hint="Enter Clerk ID"
                        android:inputType="phone"
                        android:padding="@dimen/factor_mdpi_02_dp"
                        android:singleLine="true"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/textAppearance_mdpi_08_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Fragment_Pending_Order_TV_ClerId"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="25"
                        android:gravity="center"
                        android:textColor="@android:color/holo_blue_dark"
                        android:textSize="@dimen/textAppearance_mdpi_08_sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/Fragment_Pending_Order_Btn_Clerk_Assign"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/factor_mdpi_02_dp"
                        android:layout_weight="30"
                        android:background="@drawable/counter_bg"
                        android:gravity="center"
                        android:text="Assign\nClerk"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/textAppearance_mdpi_08_sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="@dimen/factor_mdpi_03_dp"
                android:layout_weight="13"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="100" >

                <Button
                    android:id="@+id/Fragment_Pending_Order_Btn_Comment"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30"
                    android:background="@drawable/btn_yellow"
                    android:text="Comment"
                    android:textColor="#484848"
                    android:textSize="@dimen/textAppearance_mdpi_11_sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/Fragment_Pending_Order_Btn_Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_margin="@dimen/factor_mdpi_05_dp"
        android:background="@null"
        android:src="@drawable/cancel_dialog" />

</FrameLayout>