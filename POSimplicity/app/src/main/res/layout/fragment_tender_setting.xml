<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72726e"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="85"
        android:orientation="vertical"
        android:weightSum="100" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="12"
            android:drawableLeft="@drawable/icon_7"
            android:drawablePadding="@dimen/textAppearance_mdpi_06_sp"
            android:gravity="center"
            android:singleLine="true"
            android:text="Tender Setting"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textAppearance_mdpi_13_sp"
            android:textStyle="bold" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="86" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                android:weightSum="86" >
                
                <ListView android:layout_width="match_parent"
                    android:id="@+id/Fragment_Tender_List_View"                
                    android:layout_height="0dp"
                    android:choiceMode="multipleChoice"
                    android:divider="@android:color/white"
                    android:dividerHeight="2dp"
                    android:scrollbars="none"
                    android:layout_weight="74">
                    
                </ListView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="12"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="100" >
                    
                    <Button
                        android:id="@+id/Fragment_Tender_Settings_BUTTON_ADD"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/factor_mdpi_02_dp"
                        android:layout_weight="20"
                        android:background="@drawable/counter_bg"
                        android:gravity="center"
                        android:text="Add Tender"
                        android:visibility="gone"
                        android:textSize="@dimen/textAppearance_mdpi_12_sp" />

                    <Button
                        android:id="@+id/Fragment_Tender_Settings_BUTTON_RESET"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/factor_mdpi_02_dp"
                        android:layout_weight="20"
                        android:background="@drawable/counter_bg"
                        android:gravity="center"
                        android:text="Default"
                        android:textSize="@dimen/textAppearance_mdpi_12_sp" />

                    <Button
                        android:id="@+id/Fragment_Tender_Settings_BUTTON_SAVE"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/factor_mdpi_02_dp"
                        android:layout_weight="20"
                        android:background="@drawable/counter_bg"
                        android:gravity="center"
                        android:text="Save"
                        android:textSize="@dimen/textAppearance_mdpi_12_sp" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>