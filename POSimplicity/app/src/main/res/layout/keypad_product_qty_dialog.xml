<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/keypad_bg"
    android:gravity="right"
    android:orientation="horizontal"
    android:weightSum="100" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/factor_mdpi_02_dp"
        android:layout_weight="93"
        android:orientation="vertical"
        android:weightSum="100" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:id="@+id/button1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="1"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="2"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="3"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="4"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="5"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="6"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="7"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="8"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button9"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="9"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:orientation="horizontal"
            android:weightSum="3" >

            <Button
                android:id="@+id/button0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="0"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_numbers"
                android:onClick="onKeyPadClick"
                android:text="00"
                android:textColor="#595959"
                android:textSize="@dimen/textAppearance_mdpi_10_sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/backSpace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/backspace_key"
                android:onClick="onKeyPadClick" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>